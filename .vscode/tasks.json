{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "goboscript: build project",
			"type": "shell",
			"command": "goboscript",
			"args": [
				"build",
				"-i", "src",
				"-o", "Procedural Sandbox.sb3"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "create UI data",
			"type": "shell",
			"command": "python",
			"args": [
				"src/UI/UI_creator.py",
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "Build",
			"dependsOn": [
				"create UI data",
				"goboscript: build project"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}